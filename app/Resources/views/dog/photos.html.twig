{% extends 'base_logged.html.twig' %}

{% block nav %}

{{ parent() }}

{% endblock %}
{% block body %}

<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
          <h2 class="name titleBlock ">Photos</h2>
          <button type="submit" class="btn btn-default bluButton buttonBlock " data-toggle="modal" data-target="#ModalAddPhoto" >Add New</button>
           <center><img  class="img-responsive text-center " src="{{ asset('img/bones.png') }}"></center>
    <div class="rowDivider" ></div>
          <div class="row" >
            <div class="col-lg-12">

            {% for photo in photos %}
               {{photo.id}}
               {{photo.description}}
               <br>


            {% endfor %}



            
 
            </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</header>

<!-- Modal Photo Insert -->
<div id="ModalAddPhoto" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add a photo</h4>
      </div>
      <div class="modal-body">
          <div class="input_width_modal" >

          {{form_start(formPhoto)}}

                      <div class="form-group">
                    {{ form_label(formPhoto.description) }}
                    {{ form_errors(formPhoto.description) }}
                    {{ form_widget(formPhoto.description , {'attr': {'class': 'form-control'}} ) }}
                </div>
                  <div class="form-group">
                    {{ form_label(formPhoto.imageFile) }}
                    {{ form_errors(formPhoto.imageFile) }}
                    {{ form_widget(formPhoto.imageFile ) }}
                </div>
          {{form_end(formPhoto)}}
          
         </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}



{% block footer %}

{{ parent() }}

{% endblock %}
