{% extends 'base_logged.html.twig' %}

{% block nav %}

{{ parent() }}

{% endblock %}
{% block body %}

<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
          <h2 class="name titleBlock ">Photos</h2>
          <button type="submit" class="btn btn-default bluButton buttonBlock " data-toggle="modal" data-target="#ModalAddPhoto" >Add New</button>
           <center><img  class="img-responsive text-center " src="{{ asset('img/bones.png') }}"></center>
    <div class="rowDivider" ></div>
          <div class="row" >
            <div class="col-lg-12">


           
            <div class="grid">
            {% for photo in photos %}

              <div class="grid-item">
              
              <div>
              <p class="green" >Dog:</p> 
               <p>{{ photo.description }}</p>
               </div>
               <a href="/profile/photos/{photo.id} ">
               <img  class="img-responsive img-rounded" width="300" height="300" src="{{ asset('images/profiles/' ~ photo.imageName) }}"> 
                </a>
               <div>
               <i class="fa fa-comment" aria-hidden="true"></i> <span class="badge">20</span> 
               <i class="fa fa-heart-o" aria-hidden="true"></i> <span class="badge">42</span> 
               </div>
               </div>


               
              </div> 
          
            {% endfor %}
            </div>


            {{form_start(form)}}
            {{form_widget(form)}}

            {{form_end(form)}}

              
 
            </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</header>

{% endblock %}



{% block footer %}

{{ parent() }}

{% endblock %}
